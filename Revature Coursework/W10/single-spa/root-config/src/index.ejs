<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Root Config</title>

      <!-- SystemJS - Required for Single-SPA module loading -->
    <script src="https://cdn.jsdelivr.net/npm/systemjs@6.14.2/dist/system.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/systemjs@6.14.2/dist/extras/amd.min.js"></script>

    <script type="systemjs-importmap">
      {
        "imports": {
          "single-spa": "https://cdn.jsdelivr.net/npm/single-spa@5.9.5/lib/system/single-spa.min.js",
          "@revature/root-config": "/revature-root-config.js",
          "react": "https://cdn.jsdelivr.net/npm/react@18.2.0/umd/react.development.js",
          "react-dom": "https://cdn.jsdelivr.net/npm/react-dom@18.2.0/umd/react-dom.development.js",
          "react-dom/client": "https://cdn.jsdelivr.net/npm/react-dom@18.2.0/umd/react-dom.development.js",
          "react/jsx-runtime": "https://cdn.jsdelivr.net/npm/react@18.2.0/umd/react.development.js",
          "react/jsx-dev-runtime": "https://cdn.jsdelivr.net/npm/react@18.2.0/umd/react.development.js",
          "single-spa-react": "https://cdn.jsdelivr.net/npm/single-spa-react@6.0.1/lib/system/single-spa-react.min.js",
          "@revature/navbar": "https://2304-sspa-navbar.s3.us-west-1.amazonaws.com/revature-navbar.js",
          "@revature/products": "http://2304-sspa-products-env.eba-szmz9swz.us-west-1.elasticbeanstalk.com/main.js"
        }
      }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/import-map-overrides@4.1.0/dist/import-map-overrides.js"></script>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
        background-color: #ecf0f1;
        min-height: 100vh;
      }

      main {
        min-height: calc(100vh - 60px);
      }

      .welcome {
        padding: 3rem;
        text-align: center;
      }

      .welcome h1 {
        color: #2c3e50;
        margin-bottom: 1rem;
      }

      .welcome p {
        color: #7f8c8d;
        font-size: 1.2rem;
      }

      /* Placeholder while MFEs load */
      .loading {
        padding: 2rem;
        text-align: center;
        color: #7f8c8d;
      }
    </style>

  </head>

  <body>
    <noscript>
      You need to enable JavaScript to run this app.
    </noscript>

    <script>
      System.import('@revature/root-config');
    </script>

    <import-map-overrides-full show-when-local-storage="devtools" dev-libs></import-map-overrides-full>
  </body>
</html>
